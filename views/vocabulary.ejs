// Audio pronunciation functionality
function playSound(symbol, word) {
  // Create speech synthesis
  const utterance = new SpeechSynthesisUtterance(word);
  utterance.lang = 'en-US';
  utterance.rate = 0.8;
  utterance.pitch = 1;
  
  // Play the sound
  speechSynthesis.speak(utterance);
  
  // Update progress bar
  const card = event.currentTarget;
  const progressBar = card.querySelector('.progress-fill') || card.querySelector('.h-1.bg-gradient-to-r');
  progressBar.style.width = '100%';
  
  // Reset progress bar after 2 seconds
  setTimeout(() => {
    progressBar.style.width = '0%';
  }, 2000);
  
  // Add visual feedback
  card.style.transform = 'scale(0.95)';
  setTimeout(() => {
    card.style.transform = 'scale(1)';
  }, 150);
}

// Play arbitrary word (used in practice sections)
function playWord(word, el) {
  const utterance = new SpeechSynthesisUtterance(word);
  utterance.lang = 'en-US';
  utterance.rate = 0.9;
  utterance.pitch = 1;
  speechSynthesis.speak(utterance);

  if (el) {
    el.classList.add('ring-2','ring-teal-500');
    setTimeout(() => el.classList.remove('ring-2','ring-teal-500'), 500);
  }
}

