      </defs>
      <!-- Mouth outline -->
      <rect x="5" y="5" width="110" height="70" rx="18" ry="18" fill="#fff" stroke="#e5e7eb"/>
      <!-- Teeth -->
      <rect x="12" y="16" width="96" height="10" rx="5" fill="#e5e7eb"/>
  `;

  const positions = {
    frontHigh: '<ellipse cx="70" cy="42" rx="36" ry="10" fill="url(#g)" opacity="0.9"/>',
    frontLow: '<ellipse cx="55" cy="54" rx="38" ry="12" fill="url(#g)" opacity="0.9"/>',
    backLow: '<ellipse cx="85" cy="56" rx="32" ry="11" fill="url(#g)" opacity="0.9"/>',
    backHigh: '<ellipse cx="90" cy="40" rx="28" ry="9" fill="url(#g)" opacity="0.9"/>',
    central: '<ellipse cx="70" cy="50" rx="34" ry="10" fill="url(#g)" opacity="0.9"/>',
    lipsRounded: '<circle cx="110" cy="40" r="6" fill="#94a3b8"/>',
  };

  function svgClose() { return '</svg>'; }

  // Map symbol ‚Üí approximate position
  switch (symbol) {
    case 'iÀê': case '…™': return base + positions.frontHigh + svgClose();
    case '√¶': case 'a…™': return base + positions.frontLow + svgClose();
    case '…ë': case 'a ä': return base + positions.backLow + svgClose();
    case ' ä': case 'uÀê': return base + positions.backHigh + positions.lipsRounded + svgClose();
    case 'o ä': case '…î…™': return base + positions.backHigh + positions.lipsRounded + svgClose();
    case '…ô': case ' å': case '…úÀê': return base + positions.central + svgClose();
    case 'b': case 'p': return base + positions.central + '<rect x="12" y="48" width="96" height="8" rx="4" fill="#94a3b8"/>' + svgClose();
    case 't É': case 'd í': return base + positions.frontHigh + '<rect x="20" y="44" width="70" height="6" rx="3" fill="#94a3b8"/>' + svgClose();
    case 'f': return base + positions.frontHigh + '<rect x="12" y="44" width="25" height="6" rx="3" fill="#94a3b8"/>' + svgClose();
    case 'g': case 'k': return base + positions.backHigh + '<rect x="70" y="44" width="35" height="6" rx="3" fill="#94a3b8"/>' + svgClose();
    case 'h': return base + positions.central + svgClose();
    case 'l': case 'n': return base + positions.frontHigh + svgClose();
    case '≈ã': return base + positions.backHigh + svgClose();
    case 'r': return base + positions.central + positions.lipsRounded + svgClose();
    case 's': return base + positions.frontHigh + svgClose();
    default: return base + positions.central + svgClose();
  }
}


