    <div class="flex items-start gap-3">
      <div class="w-16 h-16 flex-shrink-0">${mouthSVG(symbol)}</div>
      <div class="flex-1">
        <div class="text-sm text-gray-700">${tipText}</div>
        <div class="mt-2 text-xs text-gray-500">Tap outside to close</div>
      </div>
    </div>
  `;

  // Positioning
  const rect = card.getBoundingClientRect();
  pop.style.left = `${Math.min(window.innerWidth - 360, rect.left + window.scrollX + rect.width - 360)}px`;
  pop.style.top = `${rect.top + window.scrollY - 10}px`;

  document.body.appendChild(pop);
  openPopover = pop;

  // Close on outside click
  setTimeout(() => {
    function closeIfOutside(ev) {
      if (!pop.contains(ev.target)) {
        pop.remove();
        openPopover = null;
        document.removeEventListener('click', closeIfOutside);
      }
    }
    document.addEventListener('click', closeIfOutside);
  }, 0);
}

// Minimal mouth/tongue SVG generator
function mouthSVG(symbol) {
  // Simple diagram: mouth outline + tongue position variants
  const base = `
    <svg viewBox="0 0 120 80" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <linearGradient id="g" x1="0" x2="1">
          <stop offset="0" stop-color="#14b8a6"/>
