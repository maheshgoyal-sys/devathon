// Audio pronunciation functionality
function playSound(symbol, word) {
  // Create speech synthesis
  const utterance = new SpeechSynthesisUtterance(word);
  utterance.lang = 'en-US';
  utterance.rate = 0.8;
  utterance.pitch = 1;
  
  // Play the sound
  speechSynthesis.speak(utterance);
  
  // Update progress bar
  const card = event.currentTarget;
  const progressBar = card.querySelector('.progress-fill') || card.querySelector('.h-1.bg-gradient-to-r');
  progressBar.style.width = '100%';
  
  // Reset progress bar after 2 seconds
  setTimeout(() => {
    progressBar.style.width = '0%';
  }, 2000);
  
  // Add visual feedback
  card.style.transform = 'scale(0.95)';
  setTimeout(() => {
    card.style.transform = 'scale(1)';
  }, 150);
}

// Play arbitrary word (used in practice sections)
function playWord(word, el) {
  const utterance = new SpeechSynthesisUtterance(word);
  utterance.lang = 'en-US';
  utterance.rate = 0.9;
  utterance.pitch = 1;
  speechSynthesis.speak(utterance);

  if (el) {
    el.classList.add('ring-2','ring-teal-500');
    setTimeout(() => el.classList.remove('ring-2','ring-teal-500'), 500);
  }
}

function startLearning() {
  // Show notification or redirect to learning mode
  alert('Starting English sounds learning! Click on any sound card to hear the pronunciation.');
}

// Add keyboard shortcuts
document.addEventListener('keydown', function(e) {
  if (e.key === 'Enter' || e.key === ' ') {
    const focusedCard = document.activeElement.closest('.sound-card');
    if (focusedCard) {
      focusedCard.click();
    }
  }
});

// Tooltip handling
let openPopover = null;
function showTip(buttonEl, symbol) {
  // Close existing
  if (openPopover) {
    openPopover.remove();
    openPopover = null;
  }

  const card = buttonEl.closest('.sound-card');
  const tipText = card.getAttribute('data-tip') || 'Pronunciation tip';

  const pop = document.createElement('div');
  pop.className = 'tip-popover bg-white rounded-xl shadow-2xl border border-gray-200 p-4';
  pop.innerHTML = `
    <div class="flex items-start gap-3">
      <div class="w-16 h-16 flex-shrink-0">${mouthSVG(symbol)}</div>
      <div class="flex-1">
        <div class="text-sm text-gray-700">${tipText}</div>
        <div class="mt-2 text-xs text-gray-500">Tap outside to close</div>
      </div>
    </div>
  `;

  // Positioning
  const rect = card.getBoundingClientRect();
  pop.style.left = `${Math.min(window.innerWidth - 360, rect.left + window.scrollX + rect.width - 360)}px`;
  pop.style.top = `${rect.top + window.scrollY - 10}px`;

  document.body.appendChild(pop);
  openPopover = pop;

  // Close on outside click
  setTimeout(() => {
    function closeIfOutside(ev) {
      if (!pop.contains(ev.target)) {
        pop.remove();
        openPopover = null;
        document.removeEventListener('click', closeIfOutside);
      }
    }
    document.addEventListener('click', closeIfOutside);
  }, 0);
}

