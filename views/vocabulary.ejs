}
/* Tooltip popover */
.tip-popover {
  position: absolute;
  z-index: 50;
  width: 22rem;
  max-width: calc(100vw - 2rem);
  animation: popfade .15s ease-out;
}
.tip-popover .tip-arrow {
  position: absolute;
  width: 0; height: 0;
  border-left: 8px solid transparent;
  border-right: 8px solid transparent;
  border-top: 8px solid #e5e7eb; /* border color */
  top: 100%; left: 24px;
}
@keyframes popfade { from { opacity: 0; transform: translateY(-4px);} to { opacity: 1; transform: translateY(0);} }
