<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - English Learning Platform</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-blue-50 via-white to-green-50 min-h-screen">
  <div class="container mx-auto px-4 py-8 max-w-6xl">

    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-6">
      <div class="flex flex-col md:flex-row items-center gap-6">
        <!-- Avatar -->
        <div class="relative">
          <div class="w-32 h-32 rounded-full bg-gradient-to-r from-blue-500 to-green-500 flex items-center justify-center text-white text-4xl font-bold shadow-xl">
            <%= (user && user.name ? user.name.charAt(0) : '?').toUpperCase() %>
          </div>
          <div class="absolute -bottom-2 -right-2 bg-yellow-400 rounded-full px-3 py-1 shadow-lg">
            <span class="text-sm font-bold text-gray-800">Lvl <%= Number.isFinite(user.level) ? user.level : '—' %></span>
          </div>
        </div>

        <!-- User Info -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= user && user.name ? user.name : '—' %></h1>
          <p class="text-gray-600 mb-3"><%= user && user.email ? user.email : '—' %></p>
          <div class="flex flex-wrap gap-2 justify-center md:justify-start">
            <span class="px-4 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
              <%= user && user.proficiencyLevel ? user.proficiencyLevel : '—' %>
            </span>
            <span class="px-4 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
              <i class="fas fa-fire"></i> <%= Number.isFinite(user && user.currentStreak) ? user.currentStreak : '—' %> Day Streak
            </span>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 gap-4 text-center">
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-xl">
            <div class="text-2xl font-bold text-blue-600"><%= Number.isFinite(user && user.totalWords) ? user.totalWords : '—' %></div>
            <div class="text-xs text-gray-600">Words Learned</div>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-xl">
            <div class="text-2xl font-bold text-green-600"><%= Number.isFinite(user && user.totalLessons) ? user.totalLessons : '—' %></div>
            <div class="text-xs text-gray-600">Lessons Done</div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <!-- Left Column - Progress & Achievements -->
      <div class="md:col-span-2 space-y-6">

        <!-- Learning Progress -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-chart-line text-blue-500"></i>
            Learning Progress
          </h2>

          <div class="space-y-4">
            <!-- Vocabulary Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Vocabulary</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.vocabularyProgress) ? user.vocabularyProgress : '—' %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded-full transition-all duration-500 w-[<%= Number.isFinite(user && user.vocabularyProgress) ? user.vocabularyProgress : 0 %>%]"></div>
              </div>
            </div>

            <!-- Grammar Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Grammar</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.grammarProgress) ? user.grammarProgress : '—' %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-green-500 to-green-600 h-full rounded-full transition-all duration-500 w-[<%= Number.isFinite(user && user.grammarProgress) ? user.grammarProgress : 0 %>%]"></div>
              </div>
            </div>

            <!-- Reading Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Reading</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.readingProgress) ? user.readingProgress : '—' %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-full rounded-full transition-all duration-500 w-[<%= Number.isFinite(user && user.readingProgress) ? user.readingProgress : 0 %>%]"></div>
              </div>
            </div>

            <!-- Listening Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Listening</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.listeningProgress) ? user.listeningProgress : '—' %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-full rounded-full transition-all duration-500 w-[<%= Number.isFinite(user && user.listeningProgress) ? user.listeningProgress : 0 %>%]"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Achievements -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-trophy text-yellow-500"></i>
            Achievements
          </h2>

          <% if (user && Array.isArray(user.achievements) && user.achievements.length) { %>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
              <% user.achievements.forEach(function(a){ %>
                <div class="text-center p-4 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl hover:scale-105 transition-transform">
                  <div class="text-3xl mb-2"><%= a.emoji || '🏆' %></div>
                  <div class="text-xs font-semibold text-gray-700"><%= a.title || 'Achievement' %></div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="text-sm text-gray-500">No achievements yet.</div>
          <% } %>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-clock text-green-500"></i>
            Recent Activity
          </h2>

          <div class="space-y-3">
            <% if (user && Array.isArray(user.recentActivity) && user.recentActivity.length) { %>
              <% user.recentActivity.forEach(function(it){ %>
                <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                  <div class="w-10 h-10 rounded-full flex items-center justify-center" style="background-color: rgba(59,130,246,0.12)">
                    <i class="fas <%= it.icon || 'fa-circle' %> text-blue-600"></i>
                  </div>
                  <div class="flex-1">
                    <div class="font-medium text-gray-800"><%= it.title || 'Activity' %></div>
                    <div class="text-sm text-gray-500"><%= it.timeAgo || '' %></div>
                  </div>
                  <% if (Number.isFinite(it.xp)) { %>
                    <div class="text-green-600 font-bold">+<%= it.xp %> XP</div>
                  <% } %>
                </div>
              <% }) %>
            <% } else { %>
              <div class="text-sm text-gray-500">No recent activity.</div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Right Column - Stats & Info -->
      <div class="space-y-6">

        <!-- Study Stats -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-calendar-alt text-blue-500"></i>
            Study Stats
          </h2>

          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Total Study Time</span>
              <span class="font-bold text-gray-800"><%= Number.isFinite(user && user.totalStudyHours) ? user.totalStudyHours + 'h' : '—' %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">This Week</span>
              <span class="font-bold text-gray-800"><%= Number.isFinite(user && user.weeklyStudyHours) ? user.weeklyStudyHours + 'h' : '—' %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Longest Streak</span>
              <span class="font-bold text-gray-800"><%= Number.isFinite(user && user.longestStreak) ? user.longestStreak + ' days' : '—' %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Accuracy Rate</span>
              <span class="font-bold text-green-600"><%= Number.isFinite(user && user.accuracyRate) ? user.accuracyRate + '%' : '—' %></span>
            </div>
          </div>
        </div>

        <!-- Learning Goals -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-bullseye text-red-500"></i>
            Weekly Goals
          </h2>

          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700">Lessons Completed</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.weeklyLessons) ? user.weeklyLessons : '—' %>/10</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-500 h-full rounded-full w-[<%= Number.isFinite(user && user.weeklyLessons) ? (user.weeklyLessons/10*100) : 0 %>%]"></div>
              </div>
            </div>

            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700">Study Hours</span>
                <span class="text-gray-600"><%= Number.isFinite(user && user.weeklyStudyHours) ? user.weeklyStudyHours : '—' %>/15h</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-green-500 h-full rounded-full w-[<%= Number.isFinite(user && user.weeklyStudyHours) ? (user.weeklyStudyHours/15*100) : 0 %>%]"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Details -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-user text-gray-500"></i>
            Profile Details
          </h2>

          <div class="space-y-3 text-sm">
            <div>
              <span class="text-gray-500">User ID:</span>
              <div class="font-mono text-gray-700 mt-1"><%= user && user.userId ? user.userId : '—' %></div>
            </div>
            <div>
              <span class="text-gray-500">Member Since:</span>
              <div class="text-gray-700 mt-1"><%= user && user.joinedDate ? user.joinedDate : '—' %></div>
            </div>
            <div>
              <span class="text-gray-500">Native Language:</span>
              <div class="text-gray-700 mt-1"><%= user && user.nativeLanguage ? user.nativeLanguage : '—' %></div>
            </div>
            <div>
              <span class="text-gray-500">Learning Goal:</span>
              <div class="text-gray-700 mt-1"><%= user && user.learningGoal ? user.learningGoal : '—' %></div>
            </div>
          </div>

          <button class="w-full mt-4 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium">
            <i class="fas fa-edit"></i> Edit Profile
          </button>
        </div>

        <!-- About Me -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-id-card text-teal-500"></i>
            About Me
          </h2>
          <% if (user && user.about) { %>
            <p class="text-gray-700 leading-relaxed text-sm"><%= user.about %></p>
          <% } else { %>
            <p class="text-gray-500 text-sm">No bio added yet.</p>
          <% } %>
        </div>

        <!-- Skills -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-lightbulb text-yellow-500"></i>
            Skills
          </h2>
          <% if (user && Array.isArray(user.skills) && user.skills.length) { %>
            <div class="flex flex-wrap gap-2">
              <% user.skills.forEach(function(skill){ %>
                <span class="px-3 py-1 text-sm rounded-full bg-gray-100 text-gray-700 border border-gray-200"><%= skill %></span>
              <% }) %>
            </div>
          <% } else { %>
            <div class="text-sm text-gray-500">No skills added yet.</div>
          <% } %>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <a href="/dashboard" class="block w-full px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition shadow-lg text-center font-medium">
            <i class="fas fa-home"></i> Back to Dashboard
          </a>
          <!-- <a href="/lessons" class="block w-full px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl hover:from-green-600 hover:to-green-700 transition shadow-lg text-center font-medium">
            <i class="fas fa-play"></i> Continue Learning
          </a> -->
        </div>
      </div>
    </div>
  </div>
</body>
</html>