<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - English Learning Platform</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-blue-50 via-white to-green-50 min-h-screen relative">
  <div class="container mx-auto px-4 py-8 max-w-6xl">

    <!-- Header Section -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-6">
      <div class="flex flex-col md:flex-row items-center gap-6">
        <!-- Avatar -->
        <div class="relative">
          <div class="w-32 h-32 rounded-full bg-gradient-to-r from-blue-500 to-green-500 flex items-center justify-center text-white text-4xl font-bold shadow-xl">
            <%= user.name.charAt(0).toUpperCase() %>
          </div>
          <div class="absolute -bottom-2 -right-2 bg-yellow-400 rounded-full px-3 py-1 shadow-lg">
            <span class="text-sm font-bold text-gray-800">Lvl <%= user.level || 5 %></span>
          </div>
        </div>

        <!-- User Info -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= user.name %></h1>
          <p class="text-gray-600 mb-3"><%= user.email %></p>
          <div class="flex flex-wrap gap-2 justify-center md:justify-start">
            <span class="px-4 py-1 bg-blue-100 text-blue-700 rounded-full text-sm font-medium">
              <%= user.proficiencyLevel || 'Intermediate' %>
            </span>
            <span class="px-4 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium">
              <i class="fas fa-fire"></i> <%= user.currentStreak || 7 %> Day Streak
            </span>
          </div>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 gap-4 text-center">
          <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-xl">
            <div class="text-2xl font-bold text-blue-600"><%= user.totalWords || 450 %></div>
            <div class="text-xs text-gray-600">Words Learned</div>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-green-100 p-4 rounded-xl">
            <div class="text-2xl font-bold text-green-600"><%= user.totalLessons || 32 %></div>
            <div class="text-xs text-gray-600">Lessons Done</div>
          </div>
        </div>
      </div>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      <!-- Left Column - Progress & Achievements -->
      <div class="md:col-span-2 space-y-6">

        <!-- Learning Progress -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-chart-line text-blue-500"></i>
            Learning Progress
          </h2>

          <div class="space-y-4">
            <!-- Vocabulary Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Vocabulary</span>
                <span class="text-gray-600"><%= user.vocabularyProgress || 75 %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded-full transition-all duration-500" style="width: <%= user.vocabularyProgress || 75 %>%"></div>
              </div>
            </div>

            <!-- Grammar Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Grammar</span>
                <span class="text-gray-600"><%= user.grammarProgress || 60 %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-green-500 to-green-600 h-full rounded-full transition-all duration-500" style="width: <%= user.grammarProgress || 60 %>%"></div>
              </div>
            </div>

            <!-- Reading Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Reading</span>
                <span class="text-gray-600"><%= user.readingProgress || 82 %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-purple-500 to-purple-600 h-full rounded-full transition-all duration-500" style="width: <%= user.readingProgress || 82 %>%"></div>
              </div>
            </div>

            <!-- Listening Progress -->
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700 font-medium">Listening</span>
                <span class="text-gray-600"><%= user.listeningProgress || 55 %>%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
                <div class="bg-gradient-to-r from-orange-500 to-orange-600 h-full rounded-full transition-all duration-500" style="width: <%= user.listeningProgress || 55 %>%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Achievements -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-trophy text-yellow-500"></i>
            Achievements
          </h2>

          <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
            <div class="text-center p-4 bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl hover:scale-105 transition-transform">
              <div class="text-3xl mb-2">üî•</div>
              <div class="text-xs font-semibold text-gray-700">7 Day Streak</div>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl hover:scale-105 transition-transform">
              <div class="text-3xl mb-2">üìö</div>
              <div class="text-xs font-semibold text-gray-700">Book Worm</div>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-green-50 to-green-100 rounded-xl hover:scale-105 transition-transform">
              <div class="text-3xl mb-2">‚≠ê</div>
              <div class="text-xs font-semibold text-gray-700">500 Words</div>
            </div>
            <div class="text-center p-4 bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl hover:scale-105 transition-transform opacity-50">
              <div class="text-3xl mb-2">üéØ</div>
              <div class="text-xs font-semibold text-gray-700">Perfectionist</div>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-clock text-green-500"></i>
            Recent Activity
          </h2>

          <div class="space-y-3">
            <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
              <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <i class="fas fa-book text-blue-600"></i>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-800">Completed "Present Perfect Tense"</div>
                <div class="text-sm text-gray-500">2 hours ago</div>
              </div>
              <div class="text-green-600 font-bold">+50 XP</div>
            </div>

            <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
              <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                <i class="fas fa-spell-check text-green-600"></i>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-800">Learned 15 new words</div>
                <div class="text-sm text-gray-500">5 hours ago</div>
              </div>
              <div class="text-green-600 font-bold">+30 XP</div>
            </div>

            <div class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
              <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                <i class="fas fa-headphones text-purple-600"></i>
              </div>
              <div class="flex-1">
                <div class="font-medium text-gray-800">Finished listening exercise</div>
                <div class="text-sm text-gray-500">Yesterday</div>
              </div>
              <div class="text-green-600 font-bold">+40 XP</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column - Stats & Info -->
      <div class="space-y-6">

        <!-- Study Stats -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-calendar-alt text-blue-500"></i>
            Study Stats
          </h2>

          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Total Study Time</span>
              <span class="font-bold text-gray-800"><%= user.totalStudyHours || 48 %>h</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">This Week</span>
              <span class="font-bold text-gray-800"><%= user.weeklyStudyHours || 8 %>h</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Longest Streak</span>
              <span class="font-bold text-gray-800"><%= user.longestStreak || 14 %> days</span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-gray-600">Accuracy Rate</span>
              <span class="font-bold text-green-600"><%= user.accuracyRate || 87 %>%</span>
            </div>
          </div>
        </div>

        <!-- Learning Goals -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-bullseye text-red-500"></i>
            Weekly Goals
          </h2>

          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700">Lessons Completed</span>
                <span class="text-gray-600"><%= user.weeklyLessons || 5 %>/10</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-blue-500 h-full rounded-full" style="width: <%= ((user.weeklyLessons || 5) / 10 * 100) %>%"></div>
              </div>
            </div>

            <div>
              <div class="flex justify-between text-sm mb-2">
                <span class="text-gray-700">Study Hours</span>
                <span class="text-gray-600"><%= user.weeklyStudyHours || 8 %>/15h</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-green-500 h-full rounded-full" style="width: <%= ((user.weeklyStudyHours || 8) / 15 * 100) %>%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Profile Details -->
        <div class="bg-white rounded-2xl shadow-lg p-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <i class="fas fa-user text-gray-500"></i>
            Profile Details
          </h2>

          <div class="space-y-3 text-sm">
            <div>
              <span class="text-gray-500">User ID:</span>
              <div class="font-mono text-gray-700 mt-1"><%= user.userId %></div>
            </div>
            <div>
              <span class="text-gray-500">Member Since:</span>
              <div class="text-gray-700 mt-1"><%= user.joinedDate || 'Jan 15, 2024' %></div>
            </div>
            <div>
              <span class="text-gray-500">Native Language:</span>
              <div class="text-gray-700 mt-1"><%= user.nativeLanguage || 'Spanish' %></div>
            </div>
            <div>
              <span class="text-gray-500">Learning Goal:</span>
              <div class="text-gray-700 mt-1"><%= user.learningGoal || 'Career Advancement' %></div>
            </div>
          </div>

          <button class="w-full mt-4 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-medium">
            <i class="fas fa-edit"></i> Edit Profile
          </button>
        </div>

        <!-- Action Buttons -->
        <div class="space-y-3">
          <a href="/dashboard" class="block w-full px-6 py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition shadow-lg text-center font-medium">
            <i class="fas fa-home"></i> Back to Dashboard
          </a>
          <a href="/lessons" class="block w-full px-6 py-3 bg-gradient-to-r from-green-500 to-green-600 text-white rounded-xl hover:from-green-600 hover:to-green-700 transition shadow-lg text-center font-medium">
            <i class="fas fa-play"></i> Continue Learning
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Floating Calendar Button -->
  <div class="fixed bottom-6 right-6 z-[100]">
    <button onclick="openCalendar()" class="w-16 h-16 bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 text-white rounded-full shadow-2xl hover:shadow-3xl transform hover:scale-110 transition-all duration-300 flex items-center justify-center border-4 border-white pointer-events-auto">
      <i class="fas fa-calendar-alt text-2xl"></i>
    </button>
  </div>

  <script>
    function openCalendar() {
      console.log('Calendar button clicked!');

      // Remove existing calendar if open
      const existingCalendar = document.getElementById('calendar-popup');
      if (existingCalendar) {
        existingCalendar.remove();
        return;
      }

      // Create calendar popup
      const calendarHTML = `
        <div id="calendar-popup" class="fixed bg-white rounded-xl shadow-2xl border border-gray-200 p-4 z-[200]" style="bottom: 100px; right: 24px; width: 280px;">
          <div class="flex justify-between items-center mb-4">
            <h3 class="font-bold text-gray-800">Study Calendar</h3>
            <button onclick="closeCalendar()" class="text-gray-400 hover:text-gray-600">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div id="calendar-content">
            ${generateCalendarHTML()}
          </div>
        </div>
      `;

      document.body.insertAdjacentHTML('beforeend', calendarHTML);
    }

    function closeCalendar() {
      const calendar = document.getElementById('calendar-popup');
      if (calendar) {
        calendar.remove();
      }
    }

    function generateCalendarHTML() {
      const today = new Date();
      const currentMonth = today.getMonth();
      const currentYear = today.getFullYear();
      const todayDate = today.getDate();

      const monthNames = [
        'January', 'February', 'March', 'April', 'May', 'June',
        'July', 'August', 'September', 'October', 'November', 'December'
      ];

      const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
      const firstDay = new Date(currentYear, currentMonth, 1).getDay();

      let calendarHTML = `
        <div class="text-center mb-4">
          <div class="font-semibold text-gray-800">${monthNames[currentMonth]} ${currentYear}</div>
        </div>
        <div class="grid grid-cols-7 gap-1 mb-2">
          <div class="text-center text-xs font-medium text-gray-500 py-2">Su</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">Mo</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">Tu</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">We</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">Th</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">Fr</div>
          <div class="text-center text-xs font-medium text-gray-500 py-2">Sa</div>
        </div>
        <div class="grid grid-cols-7 gap-1">
      `;

      // Empty cells for days before month starts
      for (let i = 0; i < firstDay; i++) {
        calendarHTML += `<div class="h-8"></div>`;
      }

      // Days of the month
      for (let day = 1; day <= daysInMonth; day++) {
        const isToday = day === todayDate;
        const isStreakDay = day >= todayDate - 6 && day < todayDate; // Last 7 days including today
        const isPastStreakDay = day < todayDate - 6; // Older streak days (just for demo)

        let bgColor = 'hover:bg-gray-100';
        let borderColor = '';

        if (isToday) {
          bgColor = 'bg-blue-500 text-white';
        } else if (isStreakDay) {
          borderColor = 'ring-2 ring-red-400';
        } else if (isPastStreakDay && Math.random() > 0.7) { // Random older streak days for demo
          borderColor = 'ring-2 ring-red-300 ring-opacity-50';
        }

        calendarHTML += `
          <div class="h-8 w-8 rounded-full flex items-center justify-center text-sm font-medium ${bgColor} ${borderColor} cursor-pointer transition-all relative">
            ${day}
            ${isStreakDay && !isToday ? '<div class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full border-2 border-white"></div>' : ''}
          </div>
        `;
      }

      calendarHTML += `</div>`;
      return calendarHTML;
    }

    // Debug: Check if button exists
    document.addEventListener('DOMContentLoaded', function() {
      const calendarButton = document.querySelector('.fixed.bottom-6.right-6 button');
      if (calendarButton) {
        console.log('Calendar button found and loaded successfully!');
      } else {
        console.log('Calendar button not found!');
      }
    });
  </script>
</body>
</html>