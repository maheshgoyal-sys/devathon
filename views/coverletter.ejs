<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cover Letter Generator</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-green-50 via-green-100 to-green-50">

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">Cover Letter Generator</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Generate a professional cover letter in minutes. Fill in your details and download the PDF instantly.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-8">

      <!-- Form -->
      <div class="bg-white rounded-2xl shadow-lg p-8 space-y-6">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Your Information</h2>
        <form id="coverForm" class="space-y-4">
          <input type="text" name="name" placeholder="Your Full Name" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400" />
          <input type="email" name="email" placeholder="Email" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400" />
          <input type="text" name="phone" placeholder="Phone" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400" />
          <input type="text" name="position" placeholder="Position you are applying for" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400" />
          <textarea name="company" rows="2" placeholder="Company Name & Address" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 resize-none"></textarea>
          <textarea name="body" rows="6" placeholder="Cover Letter Content / Body" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 resize-none"></textarea>

          <button type="button" id="downloadBtn"
            class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-4 rounded-lg shadow-md hover:shadow-lg transition-all duration-200">
            Download Cover Letter PDF
          </button>
        </form>
      </div>

      <!-- Live Preview -->
      <div class="bg-white rounded-2xl shadow-lg p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-6">Live Preview</h2>
        <div id="preview" class="border-2 border-gray-200 rounded-lg p-8 bg-gradient-to-br from-white to-green-50 min-h-[600px] text-gray-700 flex items-center justify-center">
          <p class="text-gray-400 text-lg text-center">Start filling the form to see your cover letter preview</p>
        </div>
      </div>

    </div>
  </div>

  <script>
    const form = document.getElementById("coverForm");
    const preview = document.getElementById("preview");
    const downloadBtn = document.getElementById("downloadBtn");
    const { jsPDF } = window.jspdf;

    form.addEventListener("input", updatePreview);

    function updatePreview() {
      const data = Object.fromEntries(new FormData(form).entries());
      preview.innerHTML = `
        <div class="text-gray-700">
          <p>${data.name || "Your Name"}</p>
          <p>${data.email || ""}${data.email && data.phone ? " | " : ""}${data.phone || ""}</p>
          <p class="mt-4">${data.company || "Company Name & Address"}</p>
          <p class="mt-6">Dear Hiring Manager,</p>
          <p class="whitespace-pre-line mt-2">${data.body || "Start writing your cover letter here..."}</p>
          <p class="mt-6">Sincerely,</p>
          <p>${data.name || "Your Name"}</p>
        </div>
      `;
    }

    downloadBtn.addEventListener("click", () => {
      const data = Object.fromEntries(new FormData(form).entries());
      const doc = new jsPDF();
      let yPos = 20;

      doc.setFontSize(12);
      doc.setFont("helvetica", "normal");
      doc.text(data.name || "Your Name", 20, yPos); yPos += 6;
      doc.text(data.email || "", 20, yPos); 
      if (data.phone) doc.text(" | " + data.phone, 20 + (data.email ? doc.getTextWidth(data.email) + 5 : 0), yPos); 
      yPos += 12;

      if (data.company) {
        const companyLines = doc.splitTextToSize(data.company, 170);
        doc.text(companyLines, 20, yPos);
        yPos += companyLines.length * 6 + 6;
      }

      doc.text("Dear Hiring Manager,", 20, yPos); yPos += 12;

      if (data.body) {
        const bodyLines = doc.splitTextToSize(data.body, 170);
        doc.text(bodyLines, 20, yPos);
        yPos += bodyLines.length * 6 + 6;
      }

      doc.text("Sincerely,", 20, yPos); yPos += 12;
      doc.text(data.name || "Your Name", 20, yPos);

      const fileName = data.name ? `${data.name.replace(/\s+/g,"_")}_CoverLetter.pdf` : "CoverLetter.pdf";
      doc.save(fileName);
    });
  </script>

</body>
</html>
