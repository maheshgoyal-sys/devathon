        <i class="fas fa-sign-out-alt"></i>
        <span>Logout</span>
      </a>
    </div>
  </aside>

  

  <!-- Main content -->
  <div class="flex-1 md:ml-0">
    <div class="p-6 md:p-10">
      <!-- Top bar -->
      <header class="flex items-center justify-between mb-8">
        <div class="flex items-center gap-4">
          

          <div>
