<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Test Result</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    @keyframes fadeInScale {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }
    .result-animate { animation: fadeInScale 0.6s cubic-bezier(0.4, 0, 0.2, 1); }
  </style>
</head>
<body class="bg-gradient-to-br from-emerald-50 via-white to-teal-50 min-h-screen flex items-center justify-center p-4">
  <div class="max-w-4xl w-full space-y-6">

    <!-- Header & Score Circle -->
    <div class="result-animate bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100 p-8">
      <h1 class="text-3xl font-bold text-center text-teal-700 mb-6">Test Completed!</h1>

      <!-- Score Circle -->
      <div class="flex justify-center mb-6">
        <div class="relative">
          <svg class="transform -rotate-90" width="160" height="160">
            <circle cx="80" cy="80" r="68" stroke="#e5e7eb" stroke-width="12" fill="none"/>
            <circle
              cx="80" cy="80" r="68"
              stroke="url(#gradient)"
              stroke-width="12"
              fill="none"
              stroke-linecap="round"
              stroke-dasharray="427"
              stroke-dashoffset="<%= 427 - (427 * score / 100) %>"
              style="transition: stroke-dashoffset 1.5s ease-out;"
            />
            <defs>
              <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
                <stop offset="100%" style="stop-color:#14b8a6;stop-opacity:1" />
              </linearGradient>
            </defs>
          </svg>
          <div class="absolute inset-0 flex items-center justify-center flex-col">
            <span class="text-5xl font-bold bg-gradient-to-r from-emerald-600 to-teal-600 bg-clip-text text-transparent">
              <%= score %>%
            </span>
            <span class="text-gray-500 text-sm mt-1">Score</span>
          </div>
        </div>
      </div>

      <!-- Stats -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="bg-green-50 rounded-xl p-4 text-center border border-green-200">
          <div class="text-3xl font-bold text-green-700 mb-1"><%= Math.round(total * score / 100) %></div>
          <div class="text-sm text-green-600 font-medium">Correct Answers</div>
        </div>
        <div class="bg-teal-50 rounded-xl p-4 text-center border border-teal-200">
          <div class="text-3xl font-bold text-teal-700 mb-1"><%= total %></div>
          <div class="text-sm text-teal-600 font-medium">Total Questions</div>
        </div>
      </div>

      <!-- Performance Message -->
      <div class="mb-6 text-center">
        <% 
          let message = '', bgColor = '', textColor = '', icon = '';
          if(score >= 90) {
            message = 'Outstanding! Excellent knowledge!';
            bgColor = 'bg-emerald-100'; textColor='text-emerald-800';
            icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>';
          } else if(score >= 75) {
            message = 'Great job! You did very well!';
            bgColor = 'bg-teal-100'; textColor='text-teal-800';
            icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>';
          } else if(score >= 60) {
            message = 'Good effort! Keep practicing!';
            bgColor = 'bg-green-100'; textColor='text-green-800';
            icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>';
          } else {
            message = 'Keep learning! Practice makes perfect!';
            bgColor = 'bg-yellow-100'; textColor='text-yellow-800';
            icon='<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>';
          }
        %>
        <div class="<%= bgColor %> <%= textColor %> rounded-xl p-4 inline-flex items-center justify-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <%- icon %>
          </svg>
          <span class="font-semibold"><%= message %></span>
        </div>
      </div>

      <!-- Questions with Answers -->
      <div class="space-y-4 mt-6">
        <% test.questions.forEach((q, idx) => { %>
          <div class="p-4 rounded-xl border
            <% if(correctAnswers.includes(idx)){ %> bg-green-50 border-green-400
            <% } else { %> bg-red-50 border-red-400 <% } %>">
            <p class="font-semibold"><%= idx+1 %>. <%= q.question %></p>
            <p>Your answer: 
              <span class="<%= userAnswers[idx] === q.correct ? 'text-green-600' : 'text-red-600' %>">
                <%= userAnswers[idx] || 'No Answer' %>
              </span>
            </p>
            <% if(userAnswers[idx] !== q.correct){ %>
              <p>Correct answer: <span class="text-green-700 font-medium"><%= q.correct %></span></p>
            <% } %>
          </div>
        <% }) %>
      </div>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-3 mt-6">
        <a href="/dashboard/test" class="flex-1 flex items-center justify-center px-6 py-3 bg-gradient-to-r from-emerald-500 to-teal-600 text-white font-semibold rounded-xl hover:from-emerald-600 hover:to-teal-700 transform hover:scale-[1.02] transition-all duration-200 shadow-md hover:shadow-lg">
          Back to Tests
        </a>
        <a href="/dashboard" class="flex-1 flex items-center justify-center px-6 py-3 bg-white text-gray-700 font-semibold rounded-xl border-2 border-gray-200 hover:border-emerald-300 hover:bg-emerald-50 transform hover:scale-[1.02] transition-all duration-200">
          Dashboard
        </a>
      </div>
    </div>

  </div>
</body>
</html>
