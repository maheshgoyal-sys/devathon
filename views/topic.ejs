<h1 class="text-2xl font-bold"><%= topic.name %></h1>
<p class="mt-2 text-gray-700"><%= topic.content %></p>

<h2 class="mt-4 font-semibold">Examples:</h2>
<ul class="list-disc ml-6">
  <% topic.examples.forEach(ex => { %>
    <li><%= ex %></li>
  <% }) %>
</ul>

<h2 class="mt-4 font-semibold">Practice Questions:</h2>
<ul class="list-decimal ml-6">
  <% if(topic.practice && topic.practice.length > 0) { %>
    <% topic.practice.forEach(q => { %>
      <li><%= q %></li>
    <% }) %>
  <% } else { %>
    <li>No practice questions yet.</li>
  <% } %>
</ul>
